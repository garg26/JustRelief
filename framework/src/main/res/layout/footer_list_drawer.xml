<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/divider"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12dp"
        android:paddingBottom="@dimen/margin_16dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_settings"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >
            <ImageView
                android:id="@+id/iv_settings_logo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/setting2x"/>

            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/text_settings"
                style="@style/text_gender"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_settings_logo"
                android:textColor="@color/bg_gray"
                android:layout_marginTop="@dimen/margin_4dp"
                android:text="@string/settings"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            >
            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/logout2x"/>

            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/text_logout"
                style="@style/text_gender"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_logout"
                android:layout_marginTop="@dimen/margin_4dp"
                android:textColor="@color/bg_gray"
                android:text="@string/logout"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
