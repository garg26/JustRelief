<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_pic"

            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile" />

        <FrameLayout
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_drawer_title"
            style="@style/text_view_style"
            android:layout_toLeftOf="@+id/iv_edit_profile"
            android:text="@string/dummy_name"
            android:textColor="@color/grey_white"
            android:textSize="20sp"
            app:customFont="GOTHAM_MEDIUM.TTF" />

        <ImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_20dp"
            android:padding="8dp"
            android:src="@mipmap/edit2x" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider" />
</LinearLayout>